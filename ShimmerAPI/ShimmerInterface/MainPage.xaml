<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShimmerInterface.MainPage">

    <VerticalStackLayout Spacing="10" Padding="20">
        <Label Text="Choose sensors:" FontSize="20" />
        <Label Text="Accelerometer" />
        <Switch x:Name="AccelerometerSwitch" IsToggled="True" />
        <Label Text="GSR" />
        <Switch x:Name="GSRSwitch" IsToggled="True" />
        <Label Text="PPG" />
        <Switch x:Name="PPGSwitch" IsToggled="True" />

        <Button Text="Connect and Start" Clicked="OnConnectAndStartClicked"/>
    </VerticalStackLayout>

</ContentPage>

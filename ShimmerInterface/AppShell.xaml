<?xml version="1.0" encoding="UTF-8" ?>

<!--
    Defines the navigation structure of the app using MAUI Shell.
    In this configuration, the Flyout menu is disabled and only a single
    initial page ("MainPage") is defined. 
-->

<Shell
    x:Class="ShimmerInterface.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ShimmerInterface.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="ShimmerInterface">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />

</Shell>

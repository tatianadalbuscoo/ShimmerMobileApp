<!-- 
MainPage.xaml
Main user interface page for displaying and configuring available Shimmer devices.
Includes device selection, sensor options toggles, and a button to initiate connection and refresh.
-->

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ShimmerInterface.ViewModels"
             xmlns:models="clr-namespace:ShimmerInterface.Models"
             x:Class="ShimmerInterface.Views.MainPage"
             x:Name="MainPageRoot"
             BackgroundColor="{StaticResource PageBackground}">

    <!-- Set the data context to the corresponding ViewModel -->
    <ContentPage.BindingContext>
        <viewmodels:MainPageViewModel />
    </ContentPage.BindingContext>

    <!-- Enables vertical scrolling to ensure all device panels and controls are accessible, even on small or low-resolution displays -->
    <ScrollView>

        <!-- Main vertical layout container -->
        <VerticalStackLayout Padding="20" Spacing="18" HorizontalOptions="Center" WidthRequest="380">

            <!-- Page title -->
            <Label Text="Select Shimmer Device" Style="{StaticResource TitleLabel}" />

            <!-- Refresh button -->
            <Button Text="Refresh Devices"
                    Style="{StaticResource SecondaryButton}"
                    Command="{Binding RefreshDevicesCommand}" />

            <!-- Dynamic list of available Shimmer devices -->
            <CollectionView ItemsSource="{Binding AvailableDevices}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        
                        <!-- Individual device card -->
                        <Frame Padding="15" Margin="5" BorderColor="Gray" BackgroundColor="White" CornerRadius="8">
                            <VerticalStackLayout Spacing="10">

                                <!-- Device display name -->
                                <Label Text="{Binding DisplayName}" FontAttributes="Bold" FontSize="16" />

                                <!-- Serial port associated with the device -->
                                <Label Text="{Binding Port1, StringFormat='Port: {0}'}" FontSize="12" TextColor="Gray" />

                                <!-- Checkbox to select the device to connect -->
                                <HorizontalStackLayout Spacing="10">
                                    <CheckBox IsChecked="{Binding IsSelected}" />
                                    <Label Text="Select for connection" VerticalOptions="Center" FontSize="14" />
                                </HorizontalStackLayout>

                                <!-- Separator -->
                                <BoxView HeightRequest="1" BackgroundColor="LightGray" Margin="0,5" />

                                <!-- Sensor configuration section -->
                                <Label Text="Sensor Configuration" FontAttributes="Bold" FontSize="14" />

                                <!-- Toggle switches for enabling/disabling specific sensors -->
                                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" RowSpacing="8">

                                    <!-- Low-Noise Accelerometer -->
                                    <Label Grid.Row="0" Grid.Column="0" Text="Low-Noise Accelerometer" VerticalOptions="Center" />
                                    <Switch Grid.Row="0" Grid.Column="1" IsToggled="{Binding EnableLowNoiseAccelerometer}" />

                                    <!-- Wide-Range Accelerometer -->
                                    <Label Grid.Row="1" Grid.Column="0" Text="Wide-Range Accelerometer" VerticalOptions="Center" />
                                    <Switch Grid.Row="1" Grid.Column="1" IsToggled="{Binding EnableWideRangeAccelerometer}" />

                                    <!-- Gyroscope -->
                                    <Label Grid.Row="2" Grid.Column="0" Text="Gyroscope" VerticalOptions="Center" />
                                    <Switch Grid.Row="2" Grid.Column="1" IsToggled="{Binding EnableGyroscope}" />

                                    <!-- Magnetometer -->
                                    <Label Grid.Row="3" Grid.Column="0" Text="Magnetometer" VerticalOptions="Center" />
                                    <Switch Grid.Row="3" Grid.Column="1" IsToggled="{Binding EnableMagnetometer}" />

                                    <!-- Pressure & Temperature -->
                                    <Label Grid.Row="4" Grid.Column="0" Text="Pressure &amp; Temperature" VerticalOptions="Center" />
                                    <Switch Grid.Row="4" Grid.Column="1" IsToggled="{Binding EnablePressureTemperature}" />

                                    <!-- Battery Voltage -->
                                    <Label Grid.Row="5" Grid.Column="0" Text="Battery Voltage" VerticalOptions="Center" />
                                    <Switch Grid.Row="5" Grid.Column="1" IsToggled="{Binding EnableBattery}" />

                                    <!-- External ADC A6 -->
                                    <Label Grid.Row="6" Grid.Column="0" Text="External ADC A6" VerticalOptions="Center" />
                                    <Switch Grid.Row="6" Grid.Column="1" IsToggled="{Binding EnableExtA6}" />

                                    <!-- External ADC A7 -->
                                    <Label Grid.Row="7" Grid.Column="0" Text="External ADC A7" VerticalOptions="Center" />
                                    <Switch Grid.Row="7" Grid.Column="1" IsToggled="{Binding EnableExtA7}" />

                                    <!-- External ADC A15 -->
                                    <Label Grid.Row="8" Grid.Column="0" Text="External ADC A15" VerticalOptions="Center" />
                                    <Switch Grid.Row="8" Grid.Column="1" IsToggled="{Binding EnableExtA15}" />
                                </Grid>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Button to initiate connection to selected devices -->
            <Button Text="Connect to Selected Devices"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding ConnectCommand}"
                    CommandParameter="{Binding Navigation, Source={x:Reference MainPageRoot}}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
<!-- Pagina principale dell'applicazione che mostra i dispositivi Shimmer disponibili -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ShimmerInterface.ViewModels"
             xmlns:models="clr-namespace:ShimmerInterface.Models"
             x:Class="ShimmerInterface.Views.MainPage"
             x:Name="MainPageRoot"
             BackgroundColor="{StaticResource PageBackground}">

    <!-- Imposta il ViewModel come contesto dati per la pagina -->
    <ContentPage.BindingContext>
        <viewmodels:MainPageViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <!-- Layout verticale che contiene il titolo, la lista dei dispositivi e il pulsante di connessione -->
        <VerticalStackLayout Padding="20" Spacing="18" HorizontalOptions="Center" WidthRequest="380">
            <!-- Titolo della pagina -->
            <Label Text="Select Shimmer Device" Style="{StaticResource TitleLabel}" />

            <!-- Mostra l'elenco dei dispositivi disponibili usando una CollectionView -->
            <CollectionView ItemsSource="{Binding AvailableDevices}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <!-- Riquadro per ogni dispositivo con info e opzioni -->
                        <Frame Padding="10" Margin="5" BorderColor="Gray" BackgroundColor="White">
                            <VerticalStackLayout Spacing="8">

                                <!-- Nome del dispositivo (es. "Shimmer Device 1") -->
                                <Label Text="{Binding DisplayName}" FontAttributes="Bold" />

                                <!-- Porte seriali associate al dispositivo -->
                                <Label Text="{Binding Port1, StringFormat='Port 1: {0}'}" FontSize="12" />
                                <Label Text="{Binding Port2, StringFormat='Port 2: {0}'}" FontSize="12" />

                                <!-- Checkbox per selezionare il dispositivo da connettere -->
                                <HorizontalStackLayout>
                                    <CheckBox IsChecked="{Binding IsSelected}" />
                                    <Label Text="Select" VerticalOptions="Center" FontSize="12" />
                                </HorizontalStackLayout>

                                <!-- Opzioni per abilitare/disabilitare i sensori -->
                                <Label Text="Low-Range Accelerometer" />
                                <Switch IsToggled="{Binding EnableAccelerometer}" />
                                <Label Text="Wide-Range Accelerometer" />
                                <Switch IsToggled="{Binding EnableWideRangeAccelerometer}" />
                                <Label Text="Gyroscope" />
                                <Switch IsToggled="{Binding EnableGyroscope}" />
                                <Label Text="Magnetometer" />
                                <Switch IsToggled="{Binding EnableMagnetometer}" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Pulsante per avviare la connessione ai dispositivi selezionati -->
            <Button Text="Connect"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding ConnectCommand}"
                    CommandParameter="{Binding Navigation, Source={x:Reference MainPageRoot}}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

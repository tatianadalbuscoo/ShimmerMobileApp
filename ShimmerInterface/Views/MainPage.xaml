<!-- 
MainPage.xaml
Main user interface page for displaying and configuring available Shimmer devices.
Includes device selection, sensor options toggles, and a button to initiate connection.
-->
    
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ShimmerInterface.ViewModels"
             xmlns:models="clr-namespace:ShimmerInterface.Models"
             x:Class="ShimmerInterface.Views.MainPage"
             x:Name="MainPageRoot"
             BackgroundColor="{StaticResource PageBackground}">

    <!-- Set the data context to the corresponding ViewModel -->
    <ContentPage.BindingContext>
        <viewmodels:MainPageViewModel />
    </ContentPage.BindingContext>

    <!-- Enables vertical scrolling to ensure all device panels and controls are accessible, even on small or low-resolution displays -->
    <ScrollView>
        
        <!-- Main vertical layout container -->
        <VerticalStackLayout Padding="20" Spacing="18" HorizontalOptions="Center" WidthRequest="380">

            <!-- Page title -->
            <Label Text="Select Shimmer Device" Style="{StaticResource TitleLabel}" />

            <!-- Dynamic list of available Shimmer devices -->
            <CollectionView ItemsSource="{Binding AvailableDevices}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <!-- Individual device card -->
                        <Frame Padding="10" Margin="5" BorderColor="Gray" BackgroundColor="White">
                            <VerticalStackLayout Spacing="8">

                                <!-- Device display name -->
                                <Label Text="{Binding DisplayName}" FontAttributes="Bold" />

                                <!-- Serial ports associated with the device -->
                                <Label Text="{Binding Port1, StringFormat='Port 1: {0}'}" FontSize="12" />
                                <Label Text="{Binding Port2, StringFormat='Port 2: {0}'}" FontSize="12" />

                                <!-- Checkbox to select the device to connect -->
                                <HorizontalStackLayout>
                                    <CheckBox IsChecked="{Binding IsSelected}" />
                                    <Label Text="Select" VerticalOptions="Center" FontSize="12" />
                                </HorizontalStackLayout>

                                <!-- Toggle switches for enabling/disabling specific sensors -->
                                <Label Text="Low-Noise Accelerometer" />
                                <Switch IsToggled="{Binding EnableLowNoiseAccelerometer}" />
                                <Label Text="Wide-Range Accelerometer" />
                                <Switch IsToggled="{Binding EnableWideRangeAccelerometer}" />
                                <Label Text="Gyroscope" />
                                <Switch IsToggled="{Binding EnableGyroscope}" />
                                <Label Text="Magnetometer" />
                                <Switch IsToggled="{Binding EnableMagnetometer}" />
                                <Label Text="Pressure &amp; Temperature" />
                                <Switch IsToggled="{Binding EnablePressureTemperature}" />
                                <Label Text="Battery Voltage" />
                                <Switch IsToggled="{Binding EnableBattery}" />
                                <Label Text="External ADC A6" />
                                <Switch IsToggled="{Binding EnableExtA6}" />
                                <Label Text="External ADC A7" />
                                <Switch IsToggled="{Binding EnableExtA7}" />
                                <Label Text="External ADC A15" />
                                <Switch IsToggled="{Binding EnableExtA15}" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Button to initiate connection to selected devices -->
            <Button Text="Connect"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding ConnectCommand}"
                    CommandParameter="{Binding Navigation, Source={x:Reference MainPageRoot}}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

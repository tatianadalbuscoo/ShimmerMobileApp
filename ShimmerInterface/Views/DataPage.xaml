<!--
DataPage.xaml
This page displays real-time data from a selected Shimmer sensor device.
It includes configuration controls, parameter selection, and a dynamically updated chart.
-->

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Class="ShimmerInterface.Views.DataPage"
             BackgroundColor="{StaticResource PageBackground}">

    <!-- 
    Main scrollable layout container. 
    Allows vertical scrolling of all controls and chart content.
    -->
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">

            <!-- Section title: Sensor data -->
            <Label Text="Sensor data"
                   Style="{StaticResource TitleLabel}" />
            <!-- Textual info of sensor's current status/data -->
            <Label Text="{Binding SensorText}"
                   FontSize="14"
                   TextColor="{StaticResource TextPrimary}" />

            <!-- Horizontal separator -->
            <BoxView HeightRequest="1"
                     BackgroundColor="{StaticResource Gray200}"
                     Margin="0,10" />

            <!-- Section title: Chart Configuration -->
            <Label Text="Chart Configuration"
                   Style="{StaticResource TitleLabel}" />

            <!-- Grid of parameter and chart options -->
            <Grid ColumnDefinitions="*, *" RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto" 
                  ColumnSpacing="10" RowSpacing="10">

                <!-- Parameter selection -->
                <Label Grid.Row="0" Grid.Column="0" 
                       Text="Parameter:" 
                       VerticalOptions="Center" 
                       FontSize="16" 
                       FontAttributes="Bold" />
                <Picker Grid.Row="0" Grid.Column="1"
                        ItemsSource="{Binding AvailableParameters}"
                        SelectedItem="{Binding SelectedParameter}"
                        FontSize="16"
                        BackgroundColor="White" />

                <!-- Chart display mode: Single or Multi -->
                <Label Grid.Row="1" Grid.Column="0" 
                       Text="Chart Mode:" 
                       VerticalOptions="Center" 
                       FontSize="16" 
                       FontAttributes="Bold" />
                <Label Grid.Row="1" Grid.Column="1"
                       VerticalOptions="Center" 
                       FontSize="16"
                       TextColor="{StaticResource Primary}"
                       Text="Single Parameter">

                    <!-- Dynamically change label based on chart mode -->
                    <Label.Triggers>
                        <DataTrigger TargetType="Label" Binding="{Binding ChartDisplayMode}" Value="Single">
                            <Setter Property="Text" Value="Single Parameter" />
                        </DataTrigger>
                        <DataTrigger TargetType="Label" Binding="{Binding ChartDisplayMode}" Value="Multi">
                            <Setter Property="Text" Value="Multi Parameter (X,Y,Z)" />
                        </DataTrigger>
                    </Label.Triggers>
                </Label>

                <!-- Auto Y-axis toggle -->
                <Label Grid.Row="2" Grid.Column="0" 
                       Text="Auto Y-Axis:" 
                       VerticalOptions="Center" 
                       FontSize="16" 
                       FontAttributes="Bold" />
                <Switch Grid.Row="2" Grid.Column="1" 
                        IsToggled="{Binding AutoYAxis}" 
                        VerticalOptions="Center" />

                <!-- Manual Y-axis min -->
                <Label Grid.Row="3" Grid.Column="0" 
                       Text="Y Min:" 
                       VerticalOptions="Center" 
                       FontSize="16" 
                       FontAttributes="Bold" />
                <Entry Grid.Row="3" Grid.Column="1"
                       Text="{Binding YAxisMinText}"
                       Keyboard="Numeric"
                       FontSize="16"
                       BackgroundColor="White"
                       IsEnabled="{Binding IsYAxisManualEnabled}" />

                <!-- Manual Y-axis max -->
                <Label Grid.Row="4" Grid.Column="0" 
                       Text="Y Max:" 
                       VerticalOptions="Center" 
                       FontSize="16" 
                       FontAttributes="Bold" />
                <Entry Grid.Row="4" Grid.Column="1"
                       Text="{Binding YAxisMaxText}"
                       Keyboard="Numeric"
                       FontSize="16"
                       BackgroundColor="White"
                       IsEnabled="{Binding IsYAxisManualEnabled}" />

                <!-- Time window for visible data -->
                <Label Grid.Row="5" Grid.Column="0" 
                       Text="Time Window (s):" 
                       VerticalOptions="Center" 
                       FontSize="16" 
                       FontAttributes="Bold" />
                <Entry Grid.Row="5" Grid.Column="1"
                       Text="{Binding TimeWindowSecondsText}"
                       Keyboard="Numeric"
                       FontSize="16"
                       BackgroundColor="White" />

                <!-- Interval between X-axis labels -->
                <Label Grid.Row="6" Grid.Column="0" 
                       Text="X Labels every (s):" 
                       VerticalOptions="Center" 
                       FontSize="16" 
                       FontAttributes="Bold" />
                <Entry Grid.Row="6" Grid.Column="1"
                       Text="{Binding XAxisLabelIntervalText}"
                       IsEnabled="{Binding IsXAxisLabelIntervalEnabled}"
                       Keyboard="Numeric"
                       FontSize="16"
                       BackgroundColor="White" />

                <!-- Sensor sampling rate -->
                <Label Grid.Row="7" Grid.Column="0" 
                       Text="Sampling Rate (Hz):" 
                       VerticalOptions="Center" 
                       FontSize="16" 
                       FontAttributes="Bold" />
                <Entry Grid.Row="7" Grid.Column="1"
                       Text="{Binding SamplingRateText}"
                       Keyboard="Numeric"
                       FontSize="16"
                       BackgroundColor="White" />
            </Grid>

            <!-- Grid visibility toggle -->
            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                <Label Text="Show Grid" VerticalOptions="Center" FontSize="14" />
                <Switch IsToggled="{Binding ShowGrid}" />
            </HorizontalStackLayout>

            <!-- Real-time validation feedback -->
            <Label Text="{Binding ValidationMessage}"
                   TextColor="Red"
                   FontSize="14">
                <Label.Triggers>
                    <DataTrigger TargetType="Label" Binding="{Binding ValidationMessage}" Value="">
                        <Setter Property="IsVisible" Value="False" />
                    </DataTrigger>
                    <DataTrigger TargetType="Label" Binding="{Binding ValidationMessage}" Value="{x:Null}">
                        <Setter Property="IsVisible" Value="False" />
                    </DataTrigger>
                </Label.Triggers>
            </Label>

            <!-- Horizontal separator -->
            <BoxView HeightRequest="1"
                     BackgroundColor="{StaticResource Gray200}"
                     Margin="0,10" />

            <!-- Section title: Real-time chart -->
            <Label Text="Real-time Chart"
                   Style="{StaticResource TitleLabel}" />

            <!-- Chart legend based on selected parameter -->
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="20">

                <!-- Hide legend when in Single mode -->
                <StackLayout.Triggers>
                    <DataTrigger TargetType="StackLayout" Binding="{Binding ChartDisplayMode}" Value="Single">
                        <Setter Property="IsVisible" Value="False" />
                    </DataTrigger>
                </StackLayout.Triggers>

                <!-- X axis legend -->
                <HorizontalStackLayout Spacing="5">
                    <BoxView WidthRequest="20" HeightRequest="3" BackgroundColor="Red" VerticalOptions="Center" />
                    <Label Text="X" FontSize="12" VerticalOptions="Center" />
                </HorizontalStackLayout>

                <!-- Y axis legend -->
                <HorizontalStackLayout Spacing="5">
                    <BoxView WidthRequest="20" HeightRequest="3" BackgroundColor="Green" VerticalOptions="Center" />
                    <Label Text="Y" FontSize="12" VerticalOptions="Center" />
                </HorizontalStackLayout>

                <!-- Z axis legend -->
                <HorizontalStackLayout Spacing="5">
                    <BoxView WidthRequest="20" HeightRequest="3" BackgroundColor="Blue" VerticalOptions="Center" />
                    <Label Text="Z" FontSize="12" VerticalOptions="Center" />
                </HorizontalStackLayout>

            </StackLayout>

            <!-- Chart display area (SkiaSharp canvas) -->
            <Border BackgroundColor="White"
                    Stroke="{StaticResource Gray200}"
                    StrokeThickness="1"
                    Padding="5"
                    HeightRequest="300">
                <skia:SKCanvasView x:Name="canvasView"
                                   HeightRequest="290"
                                   PaintSurface="OnCanvasViewPaintSurface" />
            </Border>

            <!-- Summary info box for selected parameter -->
            <Frame BackgroundColor="{StaticResource Gray100}" 
                   Padding="15" 
                   Margin="0,10">
                <StackLayout>
                    <Label Text="{Binding SelectedParameter, StringFormat='Current Parameter: {0}'}"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}" />

                    <!-- Chart mode display -->
                    <Label FontSize="14" TextColor="{StaticResource TextSecondary}">
                        <Label.Triggers>
                            <DataTrigger TargetType="Label" Binding="{Binding ChartDisplayMode}" Value="Single">
                                <Setter Property="Text" Value="Display Mode: Single Parameter" />
                            </DataTrigger>
                            <DataTrigger TargetType="Label" Binding="{Binding ChartDisplayMode}" Value="Multi">
                                <Setter Property="Text" Value="Display Mode: Multiple Parameters" />
                            </DataTrigger>
                        </Label.Triggers>
                    </Label>

                    <!-- Other parameter details -->
                    <Label Text="{Binding YAxisLabel, StringFormat='Measuring: {0}'}"
                           FontSize="14"
                           TextColor="{StaticResource TextSecondary}" />
                    <Label Text="{Binding YAxisUnit, StringFormat='Unit: {0}'}"
                           FontSize="14"
                           TextColor="{StaticResource TextSecondary}" />
                    <Label FontSize="14"
                           TextColor="{StaticResource TextSecondary}">
                        <Label.Text>
                            <MultiBinding StringFormat="Y Range: {0:F1} - {1:F1}">
                                <Binding Path="YAxisMin" />
                                <Binding Path="YAxisMax" />
                            </MultiBinding>
                        </Label.Text>
                    </Label>
                    <Label Text="{Binding TimeWindowSeconds, StringFormat='Time Window: {0}s'}"
                           FontSize="14"
                           TextColor="{StaticResource TextSecondary}" />
                    <Label Text="{Binding XAxisLabelInterval, StringFormat='X Labels every: {0}s'}"
                           FontSize="14"
                           TextColor="{StaticResource TextSecondary}">
                        <Label.Triggers>
                            <DataTrigger TargetType="Label" Binding="{Binding IsXAxisLabelIntervalEnabled}" Value="False">
                                <Setter Property="IsVisible" Value="False" />
                            </DataTrigger>
                        </Label.Triggers>
                    </Label>
                    <Label Text="{Binding SamplingRateDisplay, StringFormat='Sample Rate: {0:F1} Hz'}"
                           FontSize="14"
                           TextColor="{StaticResource TextSecondary}" />
                    <Label FontSize="14" TextColor="{StaticResource TextSecondary}">
                        <Label.Triggers>
                            <DataTrigger TargetType="Label" Binding="{Binding ShowGrid}" Value="True">
                                <Setter Property="Text" Value="Show Grid: On" />
                            </DataTrigger>
                            <DataTrigger TargetType="Label" Binding="{Binding ShowGrid}" Value="False">
                                <Setter Property="Text" Value="Show Grid: Off" />
                            </DataTrigger>
                        </Label.Triggers>
                    </Label>
                </StackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
    
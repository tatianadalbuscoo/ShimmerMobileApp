<?xml version="1.0" encoding="utf-8" ?>
    
<!--
    
    ResourceDictionary for application-wide colors and styles (MAUI).
    This dictionary defines the main color palette and reusable styles
    for pages, labels, frames, and buttons. To use these resources,
    reference the keys defined here in your XAML pages or controls.

    Colors:
      - PageBackground, FrameBackground, TextPrimary, TitleColor, etc.

    Styles:
      - TitleLabel:        Main page titles
      - SectionLabel:      Section headers and subtitles
      - RoundedFrame:      Frames with rounded corners and border
      - PrimaryButton:     Main action buttons
      - SecondaryButton:   Outlined, secondary action buttons
    
-->
   
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <!-- Main Colors -->
    <Color x:Key="PageBackground">#FFF4E6</Color>
    <Color x:Key="FrameBackground">#FFF8EF</Color>
    <Color x:Key="TextPrimary">#5C4438</Color>
    <Color x:Key="TitleColor">#8B4F1F</Color>
    <Color x:Key="ButtonColor">#D18343</Color>
    <Color x:Key="TitleAccentViolet">#7C3AED</Color>
    <Color x:Key="TitleAccentBrown">#A0642F</Color>


    <!-- Page Title -->
    <Style x:Key="TitleLabel" TargetType="Label">
        <Setter Property="FontSize" Value="22" />
        <Setter Property="TextColor" Value="{StaticResource TitleColor}" />
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>

    <!-- Section label -->
    <Style x:Key="SectionLabel" TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
    </Style>

    <!-- Container with edge -->
    <Style x:Key="RoundedFrame" TargetType="Frame">
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="BackgroundColor" Value="{StaticResource FrameBackground}" />
        <Setter Property="BorderColor" Value="#EAC9A6" />
        <Setter Property="HasShadow" Value="False" />
    </Style>

    <!-- Main Button -->
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="BackgroundColor" Value="{StaticResource ButtonColor}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="WidthRequest" Value="200" />
    </Style>

    <!-- Secondary Button -->
    <Style x:Key="SecondaryButton" TargetType="Button">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource ButtonColor}" />
        <Setter Property="BorderColor" Value="{StaticResource ButtonColor}" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="WidthRequest" Value="150" />
    </Style>
</ResourceDictionary>
